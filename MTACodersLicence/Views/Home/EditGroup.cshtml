@model MTACodersLicence.Models.GroupModel

@{
    ViewData["Title"] = "EditGroup";
}

<h2>EditGroup</h2>

<h4>GroupModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h4>Members:</h4>
        <a asp-action="CreateMember" asp-route-groupName=@Model.Name >Create new member</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>E-Mail</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Member since</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null)
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddeDateTime)
                            </td>
                            <td>
                                <a asp-action="EditMember" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="DeleteMember" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <p>There are no members in this group!</p>
                }
            </tbody>
        </table>

    </div>
</div>

<div>
    <a asp-action="MyGroups">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
