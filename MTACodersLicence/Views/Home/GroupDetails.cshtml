@model MTACodersLicence.Models.GroupModel

@{
    ViewData["Title"] = "GroupDetails";
}

<h2>Group Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>Members</dt>
        <dd>
            <table class="table">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>E-Mail</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Member since</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.Items != null)
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddeDateTime)
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </dd>
    </dl>
    <hr/>
</div>
<div>
    <a asp-action="MyGroups">Back to List</a>
</div>
