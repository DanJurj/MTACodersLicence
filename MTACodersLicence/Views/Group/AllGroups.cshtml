@model IEnumerable<MTACodersLicence.Models.GroupModels.GroupModel>

@{
    ViewData["Title"] = "Groups";
}

<h2>All Groups Available</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Challenges)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.FullName)
                </td>
                <td>
                    @item.Challenges.Count
                </td>
                <td>
                    @item.Members.Count
                </td>
                <td>
                    <a asp-action="AddJoinRequest" asp-route-groupId="@item.Id" class="btn btn-warning">Send Request To Join</a>
                </td>
            </tr>
        }
    </tbody>
</table>
