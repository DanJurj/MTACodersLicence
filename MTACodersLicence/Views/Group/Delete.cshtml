@model MTACodersLicence.Models.GroupModels.GroupModel

@{
    ViewData["Title"] = "Delete Group";
}

<h3>Are you sure you want to delete this Group?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Owner.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Members)
        </dt>
        @foreach (var member in Model.Members)
        {
            <dd>
                @member.User.FullName
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Contests)
        </dt>
        @foreach (var challenge in Model.Contests)
        {
            <dd>
                @challenge.Contest.Name
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <a asp-action="Index" class="btn btn-default">Back to List</a>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
