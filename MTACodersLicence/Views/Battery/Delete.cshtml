@model MTACodersLicence.Models.BatteryModels.BatteryModel
@{
    ViewData["Title"] = "Delete Battery";
}
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Challenge Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Challenge.Name)
        </dd>
    </dl>
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Tests)
        </dt>
        <dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>Input</th>
                        <th>Expected Output</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Tests != null)
                    {
                        foreach (var test in Model.Tests)
                        {
                            <tr>
                                <td>@test.Input</td>
                                <td>@test.ExpectedOutput</td>
                                <td>@test.Points</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </dd>
    </dl>

    <form asp-action="Delete" style="text-align: center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-route-challengeId="@Model.ChallengeId" class="btn btn-default">Cancel</a>
    </form>
</div>
