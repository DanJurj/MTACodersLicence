@model MTACodersLicence.Models.BatteryModels.BatteryModel

<h2>Create new Tests Battery</h2>

<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsPublic" /> @Html.DisplayNameFor(model => model.IsPublic)
                    </label>
                </div>
            </div>
            <div class="form-group" hidden>
                <input asp-for="ChallengeId" class="control-label" value="@ViewData["challengeId"]" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-challengeId="@ViewData["challengeId"]" class="btn btn-default">Back to Challenges</a>
</div>

