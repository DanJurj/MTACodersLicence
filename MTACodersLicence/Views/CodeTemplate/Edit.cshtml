@model MTACodersLicence.Models.CodeTemplateModel

@{
    ViewData["Title"] = "Edit Code Template";
}
<style>
    .ace_editor {
        position: relative !important;
        border: 1px solid lightgray;
        margin: auto;
        height: 300px;
    }
</style>
<h2>Edit Code Template</h2>

<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-md-3 col-md-offset-1">
            <div class="form-group">
                <label asp-for="ProgrammingLanguageId" class="control-label"></label>
                <select asp-for="ProgrammingLanguageId" class="form-control" asp-items="ViewBag.ProgrammingLanguageId"></select>
                <span asp-validation-for="ProgrammingLanguageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChallengeId" class="control-label"></label>
                <select asp-for="ChallengeId" class="form-control" asp-items="ViewBag.ChallengeId"></select>
                <span asp-validation-for="ChallengeId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" id="editorSend3" style="display: none" />
                <textarea class="form-control" rows="7" cols="50" id="editor" name="editor">@Model.Code</textarea>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" onclick="saveCodeTemplate();" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-default" asp-route-challengeId="@Model.ChallengeId">Back to Code Templates</a>
</div>

<script src="~/lib/Ace/src/ace.js"></script>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/ambiance");
    editor.session.setMode("ace/mode/c_cpp");

    function saveCodeTemplate() {
        document.getElementById("editorSend3").value = editor.getSession().getValue();
    }
</script>
