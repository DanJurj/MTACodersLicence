@using Newtonsoft.Json
@model MTACodersLicence.Models.CodeTemplateModel

@{
    ViewData["Title"] = "Create";
}
<style>
    .ace_editor {
        position: relative !important;
        border: 1px solid lightgray;
        margin: auto;
        height: 300px;
    }
</style>
<h2>Create</h2>

<h4>CodeTemplateModel</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-3 col-md-offset-1">
            <div class="form-group">
                <label asp-for="ProgrammingLanguageId" class="control-label"></label>
                <select asp-for="ProgrammingLanguageId" class="form-control" asp-items="ViewBag.ProgrammingLanguageId"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ChallengeId" class="control-label"></label>
                <input asp-for="ChallengeId" class="form-control" value="@ViewBag.ChallengeId" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <textarea asp-for="Code" class="form-control" style="display: none" id="editorSend2"></textarea>
                <textarea class="form-control" rows="7" cols="50" id="editor" name="editor"></textarea>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" onclick="saveCodeTemplate();"/>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" asp-route-challengeId="@ViewBag.ChallengeId" class="btn btn-default">Back to Code Templates</a>
</div>

<script src="~/lib/Ace/src/ace.js"></script>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/ambiance");
    editor.session.setMode("ace/mode/c_cpp");
    function saveCodeTemplate() {
        document.getElementById("editorSend2").value = editor.getSession().getValue();
    }
</script>