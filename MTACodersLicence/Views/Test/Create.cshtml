@model MTACodersLicence.Models.TestModels.TestModel

@{
    ViewData["Title"] = "Create Test";
}

<h2>Create new Test for: <a asp-controller="Battery" asp-action="Details" asp-route-batteryId="@ViewData["batteryId"]">@ViewData["batteryName"]</a></h2>
<hr />
<div class="row">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6">
            <input asp-for="BatteryId" class="form-control" value="@ViewData["batteryId"]" type="hidden" />
            <div class="form-group">
                <label asp-for="Input" class="control-label"></label>
                <textarea asp-for="Input" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <input asp-for="Points" class="form-control" type="number" />
                <span asp-validation-for="Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-default" asp-route-batteryId="@ViewData["batteryId"]">Back to Tests</a>
                <input type="submit" value="Create" class="btn btn-success"/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ExpectedOutput" class="control-label"></label>
                <textarea asp-for="ExpectedOutput" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ExpectedOutput" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

