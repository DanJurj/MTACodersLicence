@model MTACodersLicence.Models.TestModel

@{
    ViewData["Title"] = "AddTest";
}

<h2>AddTest</h2>

<h4>Add Test to challenge: @ViewData["ChallengeName"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChallengeId" class="control-label"></label>
                <input asp-for="ChallengeId" class="form-control" value="@ViewData["ChallengeId"]" />
                <span asp-validation-for="ChallengeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input" class="control-label"></label>
                <input asp-for="Input" class="form-control" />
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedOutput" class="control-label"></label>
                <input asp-for="ExpectedOutput" class="form-control" />
                <span asp-validation-for="ExpectedOutput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
