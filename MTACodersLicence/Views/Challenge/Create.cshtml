@model MTACodersLicence.Models.ChallengeModels.ChallengeModel

@{
    ViewData["Title"] = "Create new Challenge";
}

<h2>Create new Challenge</h2>
<hr />
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" type="time" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <textarea asp-for="ShortDescription" class="form-control" rows="7" cols="50"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hint" class="control-label"></label>
                <input asp-for="Hint" class="form-control" />
                <span asp-validation-for="Hint" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Desciption" class="control-label"></label>
                <textarea asp-for="Desciption" class="form-control" rows="20" cols="50"></textarea>
                <span asp-validation-for="Desciption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tasks" class="control-label"></label>
                <textarea asp-for="Tasks" class="form-control" rows="7" cols="50"></textarea>
                <span asp-validation-for="Tasks" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group btn btn-success" style="float: right">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
