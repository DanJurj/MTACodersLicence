@model MTACodersLicence.Models.ChallengeModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<style>
    .table-bordered {
        margin: 10px;
    }
</style>
<div>
    <h4>ChallengeModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Desciption)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Desciption)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Time) hours
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Hint)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Hint)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.ApplicationUser.Id)
        </dd>
    </dl>
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Tests)
        </dt>
        <dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>Input</th>
                        <th>Expected Output</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Tests != null)
                    {
                        foreach (var test in Model.Tests)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(input => test.Input)
                                </td>
                                <td>
                                    @Html.DisplayFor(output => test.ExpectedOutput)
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr> <td class="table-bordered">There are no tests for this challenge!</td></tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
