@model MTACodersLicence.Models.ChallengeModels.ChallengeModel

<h2>Details</h2>
<style>
    .table-bordered {
        margin: 10px;
    }
</style>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Desciption)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Desciption)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tasks)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Tasks)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Time) hours
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Hint)
        </dt>
        <dd class="table-bordered">
            @Html.DisplayFor(model => model.Hint)
        </dd>
    </dl>
    <dl>
        <dt>
            @Html.DisplayNameFor(model => model.Batteries)
        </dt>
        <dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>Input</th>
                        <th>Expected Output</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Batteries != null)
                    {
                        foreach (var battery in Model.Batteries)
                        {
                            foreach (var test in battery.Tests)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(input => test.Input)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(output => test.ExpectedOutput)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(output => test.Points)
                                    </td>
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr> <td class="table-bordered">There are no tests for this challenge!</td></tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
</div>
