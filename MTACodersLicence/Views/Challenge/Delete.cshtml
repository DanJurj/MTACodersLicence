        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Hint)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Hint)
        </dd>
        <dt>
            Created by
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Batteries)
        </dt>
        @if (Model.Batteries != null)
        {
            foreach (var battery in Model.Batteries)
            {
                <dd><a asp-controller="Battery" asp-action="Details" asp-route-id="@battery.Id">@battery.Name</a></dd>
            }
        }
    </dl>

    <form asp-action="Delete">
        <a asp-action="Index" class="btn btn-default">Cancel</a>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
