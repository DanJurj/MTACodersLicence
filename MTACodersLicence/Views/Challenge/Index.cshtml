@model IEnumerable<MTACodersLicence.Models.ChallengeModels.ChallengeModel>

@if (User.IsInRole("Administrator") || User.IsInRole("Profesor"))
{
    <p>
        <a asp-action="Create" class="btn btn-success" style="float: right; margin: 25px">Create New Challenge</a>
    </p>
}
<form asp-controller="Challenge" asp-action="Index" method="get">
    <div class="col-md-4" style="display: flex; justify-content: center; margin: 20px">
        <p style="margin: 7px">Name: </p> <input type="text" name="searchString" class="form-control">
        <input type="submit" value="Search" class="btn btn-default" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time) (hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td style="width: 120px">
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td style="width: 500px">
                    <div class="row">
                        <a asp-controller="Coding" asp-action="Index" asp-route-id="@item.Id" class="btn btn-success action">Start</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning action">Ranking</a>
                        @if (User.IsInRole("Administrator") || User.IsInRole("Profesor"))
                        {
                            <a asp-controller="Battery" asp-action="Index" asp-route-challengeId="@item.Id" class="btn btn-default action">Test Batteries</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default action">Details</a>
                            <a asp-controller="Solution" asp-action="Index" asp-route-challengeId="@item.Id" class="btn btn-success action">Solutions</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning action">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger action">Delete</a>

                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>