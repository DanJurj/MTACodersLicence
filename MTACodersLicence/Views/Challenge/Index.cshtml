@model IEnumerable<MTACodersLicence.Models.ChallengeModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Your Challenges</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Challenge" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desciption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time) (hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="white-space: pre-wrap">
                @Html.DisplayFor(modelItem => item.Desciption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hint)
            </td>
            <td style="width: 100px">
                <a asp-action="Code" asp-route-id="@item.Id">Start</a> <br />
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <br />
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> <br />
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> <br />
                <a asp-action="AddTest" asp-route-id="@item.Id">Add Test</a> <br />
            </td>
        </tr>
    }
    </tbody>
</table>